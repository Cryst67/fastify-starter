{
	"compilerOptions": {
		"strict": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2020",
		"sourceMap": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}